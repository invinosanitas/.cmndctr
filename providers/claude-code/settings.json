{
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_TELEMETRY": "1",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read(//D:/*/git/gpu/**)",
      "Edit(//D:/*/git/gpu/**)",
      "WebSearch",
      "WebFetch(domain:*)",
      "Read",
      "Write",
      "Bash(ls:*)",
      "Bash(dir:*)",
      "Bash(pwd:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(grep -E:*)",
      "Bash(rg:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(printf:*)",
      "Bash(echo:*)",
      "Bash(tree:*)",
      "Bash(stat:*)",
      "Bash(du:*)",
      "Bash(which:*)",
      "Bash(where:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(chmod:*)",
      "Bash(sed -n:*)",
      "Bash(sed --posix -n:*)",
      "Bash(sed -E -n:*)",
      "Bash(sed -r -n:*)",
      "Bash(sed-safe:*)",
      "Bash(nl -ba)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git diff:*)",
      "Bash(git grep:*)",
      "Bash(git rev-parse:*)",
      "Bash(git rev-list:*)",
      "Bash(git ls-files:*)",
      "Bash(git ls-tree:*)",
      "Bash(git describe:*)",
      "Bash(git blame:*)",
      "Bash(git cat-file:*)",
      "Bash(git check-ignore:*)",
      "Bash(git config --local --get:*)",
      "Bash(git remote -v:*)",
      "Bash(git submodule status:*)",
      "Bash(git submodule summary:*)",
      "Bash(git ls-remote:*)",
      "Bash(git fetch:*)",
      "Bash(git branch:*)",
      "Bash(git switch:*)",
      "Bash(git checkout:*)",
      "Bash(git restore:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git stash:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git -c core.editor=true rebase --continue)"
    ],
    "deny": [
      "Bash(git -C:*)",
      "Bash(git --no-pager:*)"
    ],
    "ask": [
      "Bash(python:*)",
      "Bash(py:*)",
      "Bash(py --version)",
      "Bash(where python)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(sudo:*)",
      "Bash(docker:*)",
      "Bash(kubectl:*)",
      "Bash(aws:*)",
      "Bash(gcloud:*)",
      "Bash(az:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -Command \"py $env:USERPROFILE\\.claude\\hooks\\clean_commit_guard.py\""
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -Command \"py $env:USERPROFILE\\.claude\\hooks\\github_issue_guard.py\""
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -Command \"py $env:USERPROFILE\\.claude\\hooks\\protect_instructions_md.py\""
          }
        ]
      },
      {
        "matcher": "git_commit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -Command \"py $env:USERPROFILE\\.claude\\hooks\\clean_commit_guard.py\""
          }
        ]
      },
      {
        "matcher": "mcp__github__create_issue|mcp__github__add_issue_comment|mcp__github__update_issue",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -Command \"py $env:USERPROFILE\\.claude\\hooks\\github_issue_guard.py\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -Command \"py $env:USERPROFILE\\.claude\\hooks\\emoji_remover.py\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"& $env:USERPROFILE\\.claude\\statusline.ps1\""
  },
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest"
}
